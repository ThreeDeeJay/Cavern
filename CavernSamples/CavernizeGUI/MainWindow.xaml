<Window x:Class="CavernizeGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CavernizeGUI"
        mc:Ignorable="d"
        Title="Cavernize" Height="430" Width="600">
    <Grid>
        <Button Content="Open file" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="80" Click="OpenFile"/>
        <TextBlock x:Name="fileName" HorizontalAlignment="Left" Margin="95,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <GroupBox Header="Rendering settings" Margin="10,35,0,55" HorizontalAlignment="Left" Width="200">
            <Grid>
                <TextBlock x:Name="layout" HorizontalAlignment="Left" Margin="10,10,0,0" Text="Driver set to: 5.1" VerticalAlignment="Top"/>
                <TextBlock HorizontalAlignment="Left" Margin="10,34,0,0" TextWrapping="Wrap" Text="Render target:" VerticalAlignment="Top"/>
                <ComboBox x:Name="renderTarget" Margin="94,31,10,0" VerticalAlignment="Top" SelectionChanged="OnRenderTargetSelected"/>
                <Canvas Margin="10,68,10,0" Height="160" VerticalAlignment="Top">
                    <Rectangle Width="76" Height="50" Canvas.Left="46" Canvas.Top="00" Stroke="Black"/>
                    <Ellipse x:Name="frontLeft"  Width="10" Height="10" Fill="Red" Canvas.Left="51" Canvas.Top="30"/>
                    <Ellipse x:Name="frontCenter"  Width="10" Height="10" Fill="Red" Canvas.Left="79" Canvas.Top="30"/>
                    <Ellipse x:Name="frontRight"  Width="10" Height="10" Fill="Red" Canvas.Left="107" Canvas.Top="30"/>
                    <Ellipse x:Name="topFrontLeft"  Width="10" Height="10" Fill="Red" Canvas.Left="51" Canvas.Top="5"/>
                    <Ellipse x:Name="topFrontCenter"  Width="10" Height="10" Fill="Red" Canvas.Left="79" Canvas.Top="5"/>
                    <Ellipse x:Name="topFrontRight"  Width="10" Height="10" Fill="Red" Canvas.Left="107" Canvas.Top="5"/>
                    <Line X1="46" Y1="0" X2="14" Y2="73" Stroke="Gray"/>
                    <Line X1="122" Y1="0" X2="154" Y2="73" Stroke="Gray"/>
                    <Line X1="46" Y1="50" X2="14" Y2="158" Stroke="Gray"/>
                    <Line X1="122" Y1="50" X2="154" Y2="158" Stroke="Gray"/>
                    <Ellipse x:Name="wideLeft"  Width="6" Height="10" Fill="Red" Canvas.Left="36" Canvas.Top="40"/>
                    <Ellipse x:Name="wideRight"  Width="6" Height="10" Fill="Red" Canvas.Left="126" Canvas.Top="40"/>
                    <Ellipse x:Name="sideLeft"  Width="6" Height="10" Fill="Red" Canvas.Left="20" Canvas.Top="91"/>
                    <Ellipse x:Name="sideRight"  Width="6" Height="10" Fill="Red" Canvas.Left="142" Canvas.Top="91"/>
                    <Ellipse x:Name="topSideLeft"  Width="10" Height="6" Fill="Red" Canvas.Left="46" Canvas.Top="62"/>
                    <Ellipse x:Name="godsVoice"  Width="10" Height="6" Fill="Red" Canvas.Left="79" Canvas.Top="57"/>
                    <Ellipse x:Name="topSideRight"  Width="10" Height="6" Fill="Red" Canvas.Left="112" Canvas.Top="62"/>
                    <Rectangle Width="140" Height="85" Canvas.Left="14" Canvas.Top="73" Stroke="Gray"/>
                    <Ellipse x:Name="rearLeft"  Width="10" Height="10" Fill="Red" Canvas.Left="34" Canvas.Top="118"/>
                    <Ellipse x:Name="rearRight"  Width="10" Height="10" Fill="Red" Canvas.Left="124" Canvas.Top="118"/>
                </Canvas>
            </Grid>
        </GroupBox>
        <GroupBox Header="Track selection" Margin="215,35,10,0" Height="175" VerticalAlignment="Top">
            <Grid>
                <ComboBox x:Name="tracks" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" SelectionChanged="OnTrackSelected"/>
                <TextBlock x:Name="trackInfo" Margin="10,37,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Post-render report" Margin="215,215,10,55">
            <Grid>
                <TextBlock x:Name="report" Margin="10,10,10,0" Text="After rendering has finished, more track information will appear here, like true object usage statistics." TextWrapping="Wrap" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <Button Content="Locate FFmpeg" Margin="0,0,85,30" HorizontalAlignment="Right" Width="120" Height="20" VerticalAlignment="Bottom" Click="LocateFFmpeg"/>
        <Button x:Name="render" Content="Render" Margin="0,0,10,30" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" Click="Render"/>
        <StatusBar Height="25" VerticalAlignment="Bottom" Padding="10,0,0,0">
            <ProgressBar x:Name="progress" Height="10" Width="100" Maximum="1"/>
            <TextBlock x:Name="status" Text="" TextWrapping="Wrap"/>
        </StatusBar>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,32" TextWrapping="Wrap" Text="Rendering mode:" Height="16" VerticalAlignment="Bottom"/>
        <RadioButton x:Name="renderOnly" Content="Report generation only" HorizontalAlignment="Left" Margin="106,0,0,32" Height="15" VerticalAlignment="Bottom"/>
        <RadioButton x:Name="renderToFile" Content="Export to file" HorizontalAlignment="Left" Margin="252,0,0,32" Height="15" VerticalAlignment="Bottom" IsChecked="True"/>
    </Grid>
</Window>
